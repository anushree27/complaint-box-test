<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anushree.complaint_box.Complaint_Box">

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">
        <TextView
            android:layout_width="368dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Complaint Box"
            android:textSize="38dp"
            android:background="@drawable/image4"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="#f9f8f7"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp" />

        <LinearLayout
            android:id="@+id/textView"
            android:layout_width="368dp"
            android:orientation="vertical"
            android:layout_height="0dp"
            android:layout_weight="2"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="88dp" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text2"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="Email"
                android:textSize="20dp"
                android:textColor="#E65100"
                android:textStyle="bold" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0b0b0b"
                android:backgroundTint="@android:color/black"
                android:scrollHorizontally="false"
                android:id="@+id/textView_data3"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:maxLines="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:inputType="textPersonName"
                android:gravity="fill_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textName"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="Password"
                android:textSize="20dp"
                android:textColor="#E65100"
                android:textStyle="bold" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#f9f8f7"
                android:backgroundTint="@android:color/black"
                android:scrollHorizontally="false"
                android:id="@+id/textView_data2"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:maxLines="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:inputType="textPersonName"
                android:gravity="fill_vertical" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Not a registered user? Sign up here!"
                    android:layout_margin="15dp"
                    android:id="@+id/text1"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"/>
                <Button
                    android:id="@+id/button_id"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:background="#1A237E"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="sign in" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
